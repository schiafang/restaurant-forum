<div class="container" style="margin-top: 100px;">
  <h1>餐廳後台</h1>
  <div class="row justify-content-between">
    <div class="mt-3 ml-3">
      <a href="/admin/restaurants">餐廳列表</a> |
      <a href="/admin/users">使用者列表</a> |
      <a href="/admin/categories">分類清單</a>
    </div>
    {{#if category}}
    <form action="/admin/categories/{{category.id}}?_method=PUT" method="POST">
      <div class="mr-3" style="display: flex; align-items:center;">
        <input type="text" name="name" value="{{category.name}}">
        <a href="#"><button type="submit" class="ml-2 mr-2 btn btn-light">更新分類</button></a>
        <a href="/admin/categories"><button type="button" class=" btn btn-light">取消</button></a>
      </div>
    </form>
    {{else}}
    <form action="/admin/categories" method="POST">
      <div class="mr-3" style="display: flex; align-items:center;">
        <input type="text" name="name" placeholder=" 輸入分類名稱">
        <a href="#"><button type="submit" class="ml-2 btn btn-light">新增分類</button></a>
      </div>
    </form>
    {{/if}}
  </div>
  <hr>
  {{> message}}
</div>
<div class="container">
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col-2">Category ID</th>
        <th scope="col-3">Category Name</th>
        <th scope="col-3">#</th>
      </tr>
    </thead>
    <tbody>
      {{#each categories}}
      <tr>
        <td>{{this.id}}</td>
        <td>{{this.name}}</td>
        <td>
          <form action="/admin/categories/{{this.id}}" method="GET" style="display: inline;">
            <button type="submit" class="btn btn-link">edit</button>
          </form>
          <form action="/admin/categories/{{this.id}}?_method=DELETE" method="POST" style="display: inline;">
            <button type="submit" class="btn btn-link">delete</button>
          </form>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>