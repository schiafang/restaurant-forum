<div class="container" style="margin-top: 150px; width: 30%;">
  <h4>編輯 {{user.name}} 個人資料</h4>
  <form action="/users/{{user.id}}?_method=PUT" method="POST" enctype="multipart/form-data"
    onsubmit="return confirm('確定要更新資料嗎？')">

    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" class="form-control-file" id="name" name="name" value="{{user.name}}" required>
    </div>

    <div class="form-group">
      <label class="btn btn-light btn-sm" for="image" style="position: absolute; "><i class="fa fa-upload"
          aria-hidden="true"></i> 上傳圖片</label>
      <input type="file" class="ml-2 form-control-file" id="image" name="image" style="outline: none; color:gray;">
    </div>

    <button class="btn btn-success btn-sm" type="submit">確認更改</button>
    <a href="javascript:history.back()"><button type="button" class="btn btn-info btn-sm">取消</button></a>
  </form>
</div>