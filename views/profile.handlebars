<div class="container" style="width:600px;">
  <div class="row align-items-center">
    <div class="col-6" style="display:flex; justify-content: center;">
      <img src="{{profile.image}}" alt="" width="250px;" height="250px" style="border-radius: 100%;">
    </div>
    <div class="col-6">
      <h5>{{profile.name}}的個人頁面</h5>
      <h6>{{profile.email}}</h6>
      <div>
        {{#ifCond user.id profile.id}}
        {{else}}
        {{#if isFollowing}}
        <form action="/following/{{profile.id}}?_method=DELETE" method="POST">
          <button type="submit" class="mt-1 btn btn-success btn-sm">取消追蹤</button>
        </form>
        {{else}}
        <form action="/following/{{profile.id}}" method="POST">
          <button type="submit" class="mt-1 btn btn-outline-success btn-sm">&emsp;追蹤&emsp;</button>
        </form>
        {{/if}}
        {{/ifCond}}
      </div>
      <div style="float: right;">
        {{#ifCond user.id profile.id}}
        <a href="/users/{{profile.id}}/edit">編輯</a>
        <span>|</span>
        {{/ifCond}}
        <a href="javascript:history.back()">返回</a>
      </div>
    </div>
  </div>
  <div class="card mt-5">
    <div class="card-header">
      {{count}} 已評論餐廳
    </div>
    <div class="card-body">
      {{#each profile.Comments}}
      <a href="/restaurants/{{this.Restaurant.id}}" style="margin:10px" title="{{this.Restaurant.name}}">
        <img src="{{this.Restaurant.image}}" alt="" width="50px" height="50px">
      </a>
      {{/each}}
    </div>
  </div>
</div>